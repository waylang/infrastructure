set -e -u -o pipefail

ROOT="$(cd $(dirname "${BASH_SOURCE[0]}")/../..; pwd)"
VERSION=$(provisioning-version)

pull-or-build-docker-development-image

docker run \
  --interactive \
  --tty \
  --rm \
  --name way \
  --volume "$ROOT:/way/src" \
  "waylang/development:$VERSION" \
  bash -l -c 'cd /way/src && "$@"' -- "$@"
